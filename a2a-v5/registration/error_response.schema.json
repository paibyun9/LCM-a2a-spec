{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "LCM A2A Error Response",
  "type": "object",
  "required": ["error"],
  "properties": {
    "error": {
      "type": "object",
      "required": ["status", "code", "message", "details"],
      "properties": {
        "status": { "type": "integer" },
        "code": { "type": "string", "minLength": 1 },
        "message": { "type": "string", "minLength": 1 },
        "details": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["path", "keyword", "message"],
            "properties": {
              "path": { "type": "string" },
              "keyword": { "type": "string" },
              "message": { "type": "string" }
            },
            "additionalProperties": true
          }
        },
        "request_id": { "type": "string" },
        "doc_url": { "type": "string" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
